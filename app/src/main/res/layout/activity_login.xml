<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shouji_login_back"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_title"
        android:text="aaa"
        android:textSize="20dp"/>

    <View
        android:id="@+id/shoujilogin_view1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/login_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/subscribe_item_text_color_pressed"
        ></View>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_below="@id/shoujilogin_view1"
        android:id="@+id/login_layout_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/lin1_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_default1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="aaa" />

        </LinearLayout>


        <EditText
            android:id="@+id/infphonenum_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="10dp"
        android:layout_below="@id/login_layout_et"
        android:id="@+id/login_layout_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/lin2_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_default2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="aaa" />

        </LinearLayout>


        <EditText
            android:id="@+id/infopwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/login_layout_et2"
        android:id="@+id/shouji_lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:id="@+id/zhuce_card"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:id="@+id/wangji_mima"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shouji_lin4"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/shouji_login"
        android:textColor="@color/red"
        android:text="aaa"/>


</RelativeLayout>
